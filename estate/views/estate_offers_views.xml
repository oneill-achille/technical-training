<?xml version="1.0"?>
<odoo>
    <record id="estate_offers_action" model="ir.actions.act_window">
        <field name="name">Estate Tags Action</field>
        <field name="res_model">offer</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="estate_offers_view_tree" model="ir.ui.view">
        <field name="name">estate.list</field>
        <field name="model">offer</field>
        <field name="arch" type="xml">
            <list string="Property Type">
                <field name="name" string="Property Name"/>
            </list>
        </field>
    </record>

    <record id="estate_offers_view_form" model="ir.ui.view">
        <field name="name">estate.form</field>
        <field name="model">offer</field>
        <field name="arch" type="xml">
            <form string="Property Type">
                <sheet>
                    <div class="oe_title">
                        <h1 class="mb32">
                            <field name="name" class="mb16"/>
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>
</odoo>