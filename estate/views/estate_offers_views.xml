<?xml version="1.0"?>
<odoo>
    <record id="estate_offers_view_tree" model="ir.ui.view">
        <field name="name">estate.list</field>
        <field name="model">offer</field>
        <field name="arch" type="xml">
            <list string="offer">
                <field name="price" string="price"/>
                <field name="partner_id" string="partner"/>
                <field name="validity" string="validity (days)"/>
                <field name="date_deadline" string="deadline"/>
                <field name="status" string="status"/>
                <button name="action_accept_offer" string="accept" type="object" icon="fa-check" invisible="status != false"/>
                <button name="action_refuse_offer" string="refused" type="object" icon="fa-level-down" invisible="status != false"/>
            </list>
        </field>
    </record>

    <record id="estate_offers_view_form" model="ir.ui.view">
        <field name="name">estate.form</field>
        <field name="model">offer</field>
        <field name="arch" type="xml">
            <form string="Offer">
                <sheet>
                    <group>
                        <group>
                            <field name="price" String="Price" readonly="property_id.state in ['offer_accepted','sold','cancelled']"/>
                            <field name="partner_id" String="Partner" readonly="property_id.state in ['offer_accepted','sold','cancelled']"/>
                            <field name="validity" string="Validity (Days)" readonly="property_id.state in ['offer_accepted','sold','cancelled']"/>
                            <field name="date_deadline" string="Deadline" readonly="property_id.state in ['offer_accepted','sold','cancelled']"/>
                            <field name="status" string="Status" readonly="property_id.state in ['offer_accepted','sold','cancelled']"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>