<?xml version="1.0"?>
<odoo>
    <record id="estate_settings_action" model="ir.actions.act_window">
        <field name="name">Estate Settings Action</field>
        <field name="res_model">estate</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="estate_settings_view_tree"/>
        <field name="search_view_id" ref="estate_settings_view_search"/>
    </record>

    <record id="estate_settings_view_tree" model="ir.ui.view">
        <field name="name">estate.list</field>
        <field name="model">estate</field>
        <field name="arch" type="xml">
            <list string="Property Type">
                <field name="name" string="Property Name"/>
            </list>
        </field>
    </record>

    <record id="estate_settings_view_form" model="ir.ui.view">
        <field name="name">estate.form</field>
        <field name="model">estate</field>
        <field name="arch" type="xml">
            <form string="Property Type">
                <sheet>
                    <div class="oe_title">
                        <h1 class="mb32">
                            <field name="name" class="mb16"/>
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate_settings_view_search" model="ir.ui.view">
        <field name="name">estate.search</field>
        <field name="model">estate</field>
        <field name="arch" type="xml">
            <search string="Search">
                <field name="name" string="Title"/>
            </search>
        </field>
    </record>
</odoo>