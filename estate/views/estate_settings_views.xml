<?xml version="1.0"?>
<odoo>
    <record id="estate_settings_action" model="ir.actions.act_window">
        <field name="name">Estate Settings Action</field>
        <field name="res_model">property.type</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="estate_settings_view_tree" model="ir.ui.view">
        <field name="name">estate.list</field>
        <field name="model">property.type</field>
        <field name="arch" type="xml">
            <list string="Property Type">
                <field name="sequence" widget="handle"/>
                <field name="name" string="Property Name"/>
            </list>
        </field>
    </record>

    <record id="estate_settings_view_form" model="ir.ui.view">
        <field name="name">estate.form</field>
        <field name="model">property.type</field>
        <field name="arch" type="xml">
            <form string="Property Type">
                <sheet>
                    <div class="oe_title">
                        <h1 class="mb32">
                            <field name="name" class="mb16"/>
                        </h1>
                    </div>
                    <group>
                        <field name="property_ids">
                            <list string="Properties">
                                <field name="sequence" widget="handle"/>
                                <field name="name" string="Title"/>
                                <field name="expected_price" string="Expected Price"/>
                                <field name="state" string="Status"/>
                            </list>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate_settings_view_search" model="ir.ui.view">
        <field name="name">estate.search</field>
        <field name="model">property.type</field>
        <field name="arch" type="xml">
            <search string="Search">
                <field name="name" string="Title"/>
            </search>
        </field>
    </record>
</odoo>