<?xml version="1.0"?>
<odoo>
    <record id="estate_advertisement_action" model="ir.actions.act_window">
        <field name="name">Estate Advertisements Action</field>
        <field name="res_model">estate</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="estate_advertisement_view_tree" model="ir.ui.view">
        <field name="name">estate.list</field>
        <field name="model">estate</field>
        <field name="arch" type="xml">
            <list string="Properties">
                <field name="name" string="Title"/>
                <field name="postcode" string="Postcode"/>
                <field name="bedrooms" string="Bedrooms"/>
                <field name="living_area" string="Living Area (sqm)"/>
                <field name="expected_price" string="Expected Price"/>
                <field name="selling_price" string="Selling Price"/>
                <field name="date_availability" string="Available From"/>
                <field name="property_type_id" string="Property Type"/>
            </list>
        </field>
    </record>

    <record id="estate_advertisement_view_form" model="ir.ui.view">
        <field name="name">estate.form</field>
        <field name="model">estate</field>
        <field name="arch" type="xml">
            <form string="Property">
                <sheet>
                    <header>
                        <button name="action_sell_property" string="Sold" type="object" class="oe_highlight" />
                        <button name="action_cancel_property" string="Cancel" type="object" class="oe_highlight" />
                        <field name="state" widget="statusbar" statusbar_visible="new,offer_received,offer_accepted,sold"/>
                    </header>
                    <div class="oe_title">
                        <h1 class="mb32">
                            <field name="name" class="mb16"/>
                            <field name="tags_ids" widget="many2many_tags" options="{'color_field': 'color'}" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="state" String="State"/>
                            <field name="property_type_id" String="Property Type" options="{'no_create': true, 'no_edit': true}"/>
                            <field name="postcode" String="Postcode"/>
                            <field name="date_availability" string="Available From"/>
                        </group>
                        <group>
                            <field name="expected_price" String="Expected Price"/>
                            <field name="best_offer" String="Best Offer"/>
                            <field name="selling_price" string="Selling Price"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                                <group>
                                    <field name="description" String="Description"/>
                                    <field name="bedrooms" String="Bedrooms"/>
                                    <field name="living_area" String="Living Area (sqm)"/>
                                    <field name="facades" String="Facades"/>
                                    <field name="garage" String="Garage"/>
                                    <field name="garden" String="Garden"/>
                                    <field name="garden_area" String="Garden Area (sqm)"/>
                                    <field name="garden_orientation" String="Garden Orientation"/>
                                    <field name="total_area" String="Total Area"/>
                                </group>
                            </group>
                        </page>
                        <page string="Offers">
                            <field name="offers_ids"/>
                        </page>
                        <page string="Other Information">
                            <group>
                                <group>
                                    <field name="salesperson_id" String="Salesman"/>
                                    <field name="buyer_id" String="Buyer"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate_advertisement_view_search" model="ir.ui.view">
        <field name="name">estate.search</field>
        <field name="model">estate</field>
        <field name="arch" type="xml">
            <search string="Search">
                <field name="name" string="Title"/>
                <field name="postcode" string="Postcode"/>
                <field name="expected_price" string="Expected Price"/>
                <field name="bedrooms" string="Bedrooms"/>
                <field name="living_area" string="Living Area"/>
                <field name="facades" string="Facades"/>
                <separator/>
                <filter string="Available" name="state" domain="[('state', 'in', ['new', 'offer_received'])]"/>
                <group>
                    <filter string="Postcode" name="postcode" context="{'group_by':'postcode'}"/>
                </group>
            </search>
        </field>
    </record>
</odoo>